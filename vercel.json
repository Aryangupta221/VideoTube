{
    "version": 2,
    "builds": [
        {
            "src": "server/src/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/dist/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/src/app.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "client/dist/assets/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "client/dist/index.html"
        }
    ]
}